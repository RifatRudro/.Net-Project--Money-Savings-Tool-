        </StackPanel>
        <StackPanel HorizontalAlignment="Left" Height="200" Margin="660,180,0,0" VerticalAlignment="Top" Width="215">
            <StackPanel.Background>
                <ImageBrush ImageSource="4-40576_person-giving-money-to-someone-clipart-giving-money-removebg-preview.png"/>
