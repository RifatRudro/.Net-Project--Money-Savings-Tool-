            </Button.Resources>
        </Button>
        <Button Content="Check Details" HorizontalAlignment="Left" Margin="358,274,0,0" VerticalAlignment="Top" Width="201" Height="44" Background="#FFC4D6CA" FontFamily="Comic Sans MS" FontSize="18" Click="Check_History_Button">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="28"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button Content="Exit" HorizontalAlignment="Left" Margin="358,334,0,0" VerticalAlignment="Top" Width="201" Height="44" Background="#FFC4D6CA" FontFamily="Comic Sans MS" FontSize="18" Click="Button_Click">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="28"/>
                </Style>
            </Button.Resources>
        </Button>
        <StackPanel HorizontalAlignment="Left" Height="100" Margin="5,420,0,-1" VerticalAlignment="Top" Width="315">
